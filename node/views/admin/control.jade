#wrapper  
  .content
    h1 Control de imagenes

    .image_list.approved
      h2 Imágenes Aprobadas
      ul
        each img in imagenes
          -if(img.checked) 
            li
              img(src="#{img.path}", alt="#{img.id}")
              input.check(type="checkbox", id="#{img.id}", checked='checked')

      // button(style="display: block; padding: 4px;") Aprueba

    .image_list.not-approved
      h2 Imágenes Sin Aprobar
      ul
        each img in imagenes
          -if(!img.checked) 
            li
              img(src="#{img.path}", alt="#{img.id}")
              input.check(type="checkbox", id="#{img.id}")