#wrapper  
  .content
    h1 Control de im&aacute;genes

    .image_list.approved
      h2 Imágenes Aprobadas
      ul
        each img in imagenes
          -if(img.checked) 
            li.imagen-item
              a.grouped_elements(href="#{img.path}")
                img(src="#{img.path}", alt="#{img._id}")
              input.check_img(type="checkbox", id="#{img._id}", checked='checked')

    .image_list.not-approved
      h2 Imágenes Sin Aprobar
      ul
        each img in imagenes
          -if(!img.checked) 
            li.imagen-item(id='#{img._id}')
              a.grouped_elements(href="#{img.path}")
                img(src="#{img.path}")
              input.check_img(type="checkbox", id="#{img._id}")
              a.borrar(href='#') Borrar

